<div class="event">
  <a href="#event-<%= item.event_id %>" class="event-created-at"><%= item.created_hm %></a>
  <span class="event-actor">
    <%= link_to item.user_name, member_path(item.user_id) %>
  </span>
  <span class="event-action">给 <%= item.new_u_name %> 指派了任务:  </span>
  <span class="event-text"><%= link_to item.todo_content, item.todo_path %></span>
</div>
