<div class="event event-comment">
  <a href="#event-<%= item.event_id %>" class="event-created-at"><%= item.created_hm %></a>
  <span class="event-actor">
    <%= link_to item.user_name, member_path(item.user_id) %>
  </span>
  <span class="event-action">回复了任务:  </span>
  <span class="event-text"><%= link_to item.s_cm_todo_content, item.s_cm_todo_path %></span>
  <div class="event-body">
    <%= link_to item.s_cm_content, item.s_cm_path %>
  </div>
</div>
